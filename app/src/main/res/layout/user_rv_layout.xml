<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/userCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        app:cardElevation="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CardConstraints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivUserId"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle"
                app:tint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/CardConstraints"
                app:layout_constraintTop_toTopOf="@+id/CardConstraints"
                app:layout_constraintBottom_toBottomOf="@+id/CardConstraints"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/tvUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                app:layout_constraintStart_toStartOf="@id/ivUserId"
                app:layout_constraintEnd_toEndOf="@id/ivUserId"
                app:layout_constraintTop_toTopOf="@id/ivUserId"
                app:layout_constraintBottom_toBottomOf="@id/ivUserId"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad Zafar"
                app:layout_constraintStart_toStartOf="@id/CardConstraints"
                app:layout_constraintEnd_toEndOf="@id/CardConstraints"
                app:layout_constraintTop_toTopOf="@id/CardConstraints"
                app:layout_constraintBottom_toBottomOf="@id/CardConstraints"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>